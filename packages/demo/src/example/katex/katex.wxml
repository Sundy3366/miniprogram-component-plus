<view class="page">
    <view class="page__hd">
        <view class="page__title">Katex</view>
        <view class="page__desc">富文本公式</view>
    </view>

    <view class="page__bd">
        <textarea class="input" value="{{formula}}" bindinput="onInput"></textarea>
        <view style="margin: 8px;">
            <m-katex formula="{{formula}}" bind:render-success="onRenderSuccess" bind:render-error="onRenderError"></m-katex>
        </view>
        <view wx:if="errorMessage" style="color: red;">{{errorMessage}}</view>
    </view>
</view>